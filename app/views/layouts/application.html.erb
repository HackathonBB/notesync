<!DOCTYPE html>
<html>
<head>
  <title>Notesync</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div class="navbar">
		<div class="navbar-inner navbar-fixed-top" style="border-radius: 0px;">
			<a class="brand" href="/">NoteSync</a>
			<ul class="nav">
				<li><a href="<%= lecture_list_path %>">Lectures</a></li>
				<li><a href="<%= lecture_new_path %>">Create</a></li>
			</ul>
			<% if session[:user] %>
				<a class="pull-right" href="<%= user_logout_path()%>" >logout</a>
			<% end %>
		</div>
	</div>

	<div class="container-fluid" style="margin-top: 50px;">
		<% if flash[:error] %>
			<div class="row-fluid">
				<div class="span8 offset2 alert alert-error"><%= flash[:error] %></div>
			</div>
		<% end %>
		<div class="row-fluid">

			<%= yield %>

		</div>

	</div>

</body>
</html>
