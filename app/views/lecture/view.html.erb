<script>
<% if @mine %>
var myNote = "<%= @mine.id %>";
<% end %>
var otherNotes = <%= @others %>;

$(noteViewReady);

</script>

<div class="row-fluid">
		<div class="span6">
			<div class="dropdown centerdrop">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#" id="ddA">Mine</a>
				<ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    				<li><a href="#" class="dropitem" data-id="<%= @mine.id %>" data-where="A">Mine</a></li>
    				<% @others.each do |key, value| %>
    				<li><a href="#" class="dropitem" data-id="<%= @key %>" data-where="A"><%= value %></a></li>
    				<% end %>
  				</ul>
			</div>
		</div>

		<div class="span6">
			<div class="dropdown centerdrop">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#" id="ddB">
					<% if @others.length > 0 %>
					<%= @others[0].id %>
					<% else %>
					No other notes
					<% end %>
				</a>
				 <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    				<li><a href="#" class="dropitem" data-id="<%= @mine.id %>" data-where="B">Mine</a></li>
    				<% @others.each do |key, value| %>
    				<li><a href="#" class="dropitem" data-id="<%= @key %>" data-where="B"><%= value %></a></li>
    				<% end %>
  				</ul>
			</div>
		</div>
</div>

<div class="row-fluid">
	<div class="span6">
		<div class="pView" id="noteA">
			<% @mine.paragraphs.each do |e| %>
			<div class="row-fluid">
				<div class="span1 dateMark">
					<%= e.timestamp.strftime "%H:%M" %>
				</div>
				<div class="span11 pText">
					<%= e.text %>
				</div>
			</div>
			<% end %>
		</div>
	</div>

	<div class="span6">
		<div class="pView" id="noteB">
		</div>
	</div>
</div>
